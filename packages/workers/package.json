{
  "name": "@aegis/workers",
  "version": "0.1.0",
  "private": true,
  "description": "BullMQ workers for evidence processing, SBOM parsing, and vulnerability indexing",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aegis/db": "*",
    "@aegis/shared": "*",
    "bullmq": "^4.15.0",
    "dotenv": "^16.3.1",
    "ioredis": "^5.3.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
